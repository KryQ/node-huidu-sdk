{
    "compilerOptions": {
      "module": "ES6",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports":true,
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "sourceMap": false,
      "rootDir": "src"
    },
    "include": ["src/*", "src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }